	cin.ignore();
	system("cls");
	
	break;	
	case 6:system("cls");

	return;
	break;
	case 7:exit(0);
	default:system("cls");
	cout<<"Invalid Input!!!!!!"<<endl;
	
	}
    }while(choose!=7);
}
